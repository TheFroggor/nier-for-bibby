[settings]
screenchange-reload = true
background = #2e1a47
foreground = #3347e7

[global]
margin-top = 5
margin-bottom = 0
font-0 = Liberation Mono Font:style=Medium:size=10;2
font-1 = Font Awesome 6 Free:style=Solid:size=10;2
font-2 = Font Awesome 6 Free:style=Regular:size=10;2
dpi = 133
wm-restack = bspwm

[bar/left]
monitor = ${env:MONITOR:LVDS1}
width = 6%
height = 20
offset-x = 1%
offset-y = 1%
padding-left = 0 
padding-right = 1
font-0 = ${global.font-0}
font-1 = ${global.font-1}
font-2 = ${global.font-2}
background = ${settings.background}
foreground = ${settings.foreground}
radius = 6.0
border-size = 0
modules-left = launcher bspwm-desktops
wm-restack = bspwm

[bar/center3]
monitor = ${env:MONITOR:LVDS1}
width = 10%
height = 20
offset-x = 45%
offset-y = 1%
padding-left = 1
padding-right = 1
background = ${settings.background}
foreground = ${settings.foreground}
font-0 = ${global.font-0}
font-1 = ${global.font-1}
font-2 = ${global.font-2}
radius = 6.0
border-size = 0
modules-center = date
wm-restack = bspwm
separator = " "

[bar/center1]
monitor = ${env:MONITOR:LVDS1}
width = 9%
height = 20
offset-x = 8%
offset-y = 1%
padding-left = 1
padding-right = 1
background = ${settings.background}
foreground = ${settings.foreground}
font-0 = ${global.font-0}
font-1 = ${global.font-1}
font-2 = ${global.font-2}
radius = 6.0
border-size = 0
modules-center = network systray
wm-restack = bspwm
separator = " "

[bar/center2]
monitor = ${env:MONITOR:LVDS1}
width = 4%
height = 20
offset-x = 40%
offset-y = 1%
padding-left = 1
padding-right = 1
background = ${settings.background}
foreground = ${settings.foreground}
font-0 = ${global.font-0}
font-1 = ${global.font-1}
font-2 = ${global.font-2}
radius = 6.0
border-size = 0
modules-center = xwindow
wm-restack = bspwm
separator = " "

[bar/right]
monitor = ${env:MONITOR:LVDS1}
width = 15%
height = 20
offset-x = 76%
offset-y = 1%
padding-left = 1
padding-right = 1
background = ${settings.background}
foreground = ${settings.foreground}
font-0 = ${global.font-0}
font-1 = ${global.font-1}
font-2 = ${global.font-2}
radius = 6.0
border-size = 0
modules-center = cpu memory pulseaudio battery-cursed
wm-restack = bspwm
separator = " "

[module/xwindow]
type = internal/xwindow
label = %title:0:5:...%
padding = 1

[module/systray]
type = internal/tray
format-margin = 8pt
tray-spacing = 16pt

[module/launcher]
type = custom/text
format = <label>
label = O
label-margin = 1
click-left = rofi -show drun
background = #3b4261
foreground = #7aa2f7
padding = 1
radius = 4
click-left-background = #1a1b26
click-left-foreground = #ff9e64


[module/bspwm-desktops]
type = internal/bspwm
pin-workspaces = true

label-occupied = %name%
label-occupied-foreground = ${settings.foreground}
label-occupied-padding = 1

label-focused = %name%
label-focused-background = #7aa2f7
label-focused-foreground = #1a1b26
label-focused-padding = 1

label-empty = ""
label-separator = ""

[module/date]
type = internal/date
interval = 60
date = %d.%m.%Y
time = %H:%M
label = %date% %time%
padding-right = 1

[module/network]
type = internal/network
interval = 5
interface = wlan0
format-connected = <label-connected>
label-connected = %essid%
label-connected-foreground = #9ece6a
format-disconnected = <label-disconnected>
label-disconnected = offline
label-disconnected-foreground = #ff9e64
padding-right = 1

[module/nm]
type = custom/text
format = N
format-foreground = ${settings.foreground}
formta-background = #3b4261
padding = 2
radius = 4
click-left = nmtui &
click-right = pkill -f nm-applet

[module/cpu]
type = internal/cpu
interval = 3
format = <label>
label = CPU %percentage%%
format-foreground = #7aa2f7
padding-right = 1

[module/memory]
type = internal/memory
interval = 3
format = <label>
label = MEM %percentage_used%%
format-foreground = #7aa2f7
padding-right = 1

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "VOL "
format-volume-prefix-foreground = ${settings.foreground}
format-volume = <label-volume>

label-volume = %percentage%%


format-foreground = ${settings.foreground}
format-background = ${settings.background}
padding-right = 1

[module/battery-cursed]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 90
interval = 10
discharging-at = 10

format-full = <label-full>
label-full = :3

format-charging = <ramp-capacity> <label-charging>
ramp-capacity-0 = ;^;
ramp-capacity-1 = :<
ramp-capacity-2 = :|
ramp-capacity-3 = :)
ramp-capacity-4 = :D
ramp-capacity-5 = :3
label-charging = %percentage%%

format-discharging = <animation-discharging> <label-discharging>
animation-discharging-0 = ;^;
animation-discharging-1 = ;^;
animation-discharging-2 = ;^;
animation-discharging-framerate = 500
animation-discharging-foreground = #ff757f
label-discharging = %percentage%%

padding-right = 1
